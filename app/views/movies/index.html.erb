Here is a list of all the movies


<%= link_to "Add a new movie", new_path, class:"btn btn-default" %>

<% @movies.each do |movie| %>
  <br>
  <%= link_to "#{movie.title}", show_path(id: movie.id) %>
  <br>
  <%= movie.format %>
  <br>
  Length of Movie in hh:mm:ss
  <%= Time.at(movie.length).utc.strftime("%H:%M:%S") %>
  <br>
  <%= movie.release_year %>
  <br>
  <%=movie.rating %>
  <br>

  <%= link_to "Delete this movie", delete_path(id: movie.id), :method => :delete %>

<% end %>
