<div class="container">
  <div class="col-md-12">
    <h1> Here is a list of all the movies </h1>
    <%= link_to "Add a new movie", new_path, class:"btn btn-default" %>
    <table class="table">
      <caption>Movies</caption>
          <thead>
            <tr>
              <th> Movie Title </th>
              <th> Movie Format </th>
              <th> Length of Movie </th>
              <th> Release Year </th>
              <th> Rating </th>
              <th> Delete </th>
              <th> Edit </th>
            </tr>
          </thead>
          <tbody>
            <% @movies.each do |movie| %>
            <tr>
              <td><%=movie.title%> </td>
              <td><%= movie.format %> </td>
              <td><%= Time.at((60)*(movie.length)).utc.strftime("%H:%M:%S") %> </td>
              <td><%= movie.release_year %> </td>
              <td><%=movie.rating %> </td>
              <td> <%= link_to "Delete this movie", delete_path(id: movie.id), :method => :delete %> </td>
              <td>   <%= link_to "Edit this movie", edit_path(id: movie.id) %> </td>
            </tr>
            <% end %>
          </tbody>
    </table>



        </div> <!--media-->
    </div> <!-- row -->
  </div> <!-- col-md-12-->
</div>
